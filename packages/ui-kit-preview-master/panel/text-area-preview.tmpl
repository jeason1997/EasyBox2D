<div class="section">
  <h3>Standard</h3>
  <div class="group g-01">
    <ui-text-area placeholder="Enter your text..."></ui-text-area>
    <span class="text"></span>
  </div>

  <div class="group g-02">
    <ui-text-area value="Hello World" placeholder="Search..."></ui-text-area>
    <span class="text"></span>
  </div>

  <div class="group g-03">
    <ui-text-area value="Disabled" placeholder="Search..." disabled></ui-text-area>
    <span class="text"></span>
    <ui-button id="focus" class="mini blue">Focus</ui-button>
  </div>

  <span id="event">event: ---</span>
</div>

<div class="section">
  <h3>State</h3>
  <div style="position: relative;">
    <div class="group">
      <ui-text-area style="width: 200px;" placeholder="Normal..."></ui-text-area>
      <ui-text-area style="width: 200px;" value="Normal"></ui-text-area>
    </div>
    <div class="group">
      <ui-text-area style="width: 200px;" placeholder="Focused..." focused></ui-text-area>
      <ui-text-area style="width: 200px;" value="Focused" focused></ui-text-area>
    </div>
    <div class="group">
      <ui-text-area style="width: 200px;" placeholder="Disabled..." disabled></ui-text-area>
      <ui-text-area style="width: 200px;" value="Disabled" disabled></ui-text-area>
    </div>
    <div class="fit"></div>
  </div>
</div>

<div class="section">
  <h3>Resize</h3>
